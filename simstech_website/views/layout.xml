<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- =======================================================================
         Simstech Website Layout Customizations
         Override default Odoo website layout for brand consistency
    ======================================================================== -->

    <!-- Extend the main website layout - Add Inter font and footer -->
    <template id="simstech_layout" inherit_id="website.layout" name="Simstech Layout">
        <xpath expr="//head" position="inside">
            <!-- Inter font from Google Fonts -->
            <link rel="preconnect" href="https://fonts.googleapis.com"/>
            <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin="anonymous"/>
            <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&amp;display=swap" rel="stylesheet"/>
            
            <!-- Preconnect to common CDNs for performance -->
            <link rel="dns-prefetch" href="//www.google-analytics.com"/>
            <link rel="dns-prefetch" href="//www.googletagmanager.com"/>
            
            <!-- Hide Odoo default footer elements -->
            <style>
                footer#bottom { display: none !important; }
            </style>
        </xpath>
        
        <!-- Add our custom footer before the Odoo footer -->
        <xpath expr="//footer[@id='bottom']" position="before">
            <t t-call="simstech_website.s_simstech_footer"/>
        </xpath>
    </template>

</odoo>
