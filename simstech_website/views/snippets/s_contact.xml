<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- =======================================================================
         Simstech Contact Section
         Dark CTA section with contact button
    ======================================================================== -->

    <template id="s_simstech_contact" name="Simstech Contact">
        <section id="contact" class="s_simstech_contact simstech-section-dark section-padding">
            <div class="simstech-container">
                <div class="contact-grid">
                    <!-- Left: Content -->
                    <div class="contact-content">
                        <h2 class="o_default_snippet_text">Want to talk?</h2>
                        <p class="o_default_snippet_text">
                            If you're unsure what the right move is â€” that's a great place to start. 
                            Tell me what's going on and I'll respond with next steps.
                        </p>
                        
                        <div class="contact-tags mt-4">
                            <span class="simstech-pill simstech-pill-dark">Cloud</span>
                            <span class="simstech-pill simstech-pill-dark">Reliability</span>
                            <span class="simstech-pill simstech-pill-dark">Observability</span>
                            <span class="simstech-pill simstech-pill-dark">Integrations</span>
                            <span class="simstech-pill simstech-pill-dark">AI (when it fits)</span>
                        </div>
                    </div>

                    <!-- Right: CTA -->
                    <div class="contact-cta-wrapper">
                        <a href="/contactus" class="btn-simstech-primary btn-simstech-lg w-100">
                            Start a conversation
                        </a>
                        <p class="form-note mt-3 o_default_snippet_text" style="color: #9CA3AF; font-size: 0.875rem; text-align: center;">
                            No spam. No pressure. Just a conversation.
                        </p>
                    </div>
                </div>
            </div>
        </section>
    </template>

</odoo>
