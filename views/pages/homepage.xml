<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- =======================================================================
         Simstech Homepage
         Complete landing page with comprehensive SEO optimization
         Target: Technology consulting from Charleston, SC to Wilmington, NC
    ======================================================================== -->

    <!-- Override the default homepage -->
    <template id="homepage" name="Simstech Homepage">
        <t t-call="website.layout">
            <t t-set="pageName" t-value="'homepage'"/>
            
            <!-- SEO Meta - Primary Keywords -->
            <t t-set="website_meta_title">Technology Consulting Myrtle Beach SC | Cloud &amp; Engineering | Jacob Sims</t>
            <t t-set="website_meta_description">Engineer-first technology consulting in Myrtle Beach, SC. Cloud architecture, observability, reliability engineering, and AI integration. Serving Charleston to Wilmington. 10+ years experience in healthcare, aviation, manufacturing.</t>
            <t t-set="website_meta_keywords">technology consulting myrtle beach, cloud consulting south carolina, engineering consultant charleston, IT consultant wilmington NC, reliability engineering, observability consulting, AI integration, devops consulting, kubernetes consultant, SRE consulting</t>
            
            <!-- Open Graph -->
            <t t-set="additional_title">Technology Consulting Myrtle Beach SC | Cloud &amp; Engineering | Jacob Sims</t>
            
            <div id="wrap" class="oe_structure oe_empty">
                
                <!-- Include all structured data schemas -->
                <t t-call="simstech_website.simstech_schema_localbusiness"/>
                <t t-call="simstech_website.simstech_schema_person"/>
                <t t-call="simstech_website.simstech_schema_services"/>
                <t t-call="simstech_website.simstech_schema_website"/>
                <t t-call="simstech_website.simstech_schema_breadcrumb_home"/>

                <!-- Hero Section -->
                <t t-call="simstech_website.s_simstech_hero"/>
                
                <!-- Services Section -->
                <t t-call="simstech_website.s_simstech_services"/>
                
                <!-- Divider -->
                <t t-call="simstech_website.s_simstech_divider"/>
                
                <!-- Problems Section -->
                <t t-call="simstech_website.s_simstech_problems"/>
                
                <!-- Divider -->
                <t t-call="simstech_website.s_simstech_divider"/>
                
                <!-- Work Experience Section -->
                <t t-call="simstech_website.s_simstech_work"/>
                
                <!-- Approach Section -->
                <t t-call="simstech_website.s_simstech_approach"/>
                
                <!-- FAQ Section (includes FAQ Schema) -->
                <t t-call="simstech_website.s_simstech_faq"/>
                <t t-call="simstech_website.s_simstech_faq_schema"/>
                
                <!-- Contact Section -->
                <t t-call="simstech_website.s_simstech_contact"/>
                
            </div>
            
            <!-- Footer - outside oe_structure so it always renders -->
            <t t-call="simstech_website.s_simstech_footer"/>
        </t>
    </template>

    <!-- Register as the default homepage -->
    <record id="homepage_page" model="website.page">
        <field name="name">Home</field>
        <field name="url">/</field>
        <field name="view_id" ref="homepage"/>
        <field name="is_published">True</field>
        <field name="website_indexed">True</field>
    </record>

</odoo>
